<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/create_chat_room_item_bg"
    android:padding="16dp">

    <TextView
        android:id="@+id/item_chat_room_layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="《内推经验分享》内推致富，助你走上人生巅峰." />

    <TextView
        android:id="@+id/item_chat_room_layout_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/room_avatar_bg"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_chat_room_layout_title"
        tools:text="B" />

    <TextView
        android:id="@+id/item_chat_room_layout_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/item_chat_room_layout_avatar"
        app:layout_constraintLeft_toRightOf="@id/item_chat_room_layout_avatar"
        app:layout_constraintTop_toTopOf="@id/item_chat_room_layout_avatar"
        tools:text="bytedance" />

    <TextView
        android:id="@+id/item_chat_room_layout_room_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="#86909C"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_chat_room_layout_avatar"
        tools:text="房内总人数 4 / 连麦人数 1" />

    <TextView
        android:id="@+id/item_chat_room_layout_room_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#86909C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="ID:92838745" />
</androidx.constraintlayout.widget.ConstraintLayout>