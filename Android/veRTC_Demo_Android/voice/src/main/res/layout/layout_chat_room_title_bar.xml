<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/room_title_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_height"
    tools:background="@color/main_background"
    tools:ignore="ContentDescription">

    <ImageView
        android:id="@+id/chat_room_leave"
        android:layout_width="@dimen/title_bar_icon_width"
        android:layout_height="@dimen/title_bar_icon_height"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/title_bar_icon_margin"
        android:padding="@dimen/title_bar_icon_padding"
        android:src="@drawable/voice_leave_room_unselected" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/chat_room_prefix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_H1_18sp"
            android:text="ID:" />

        <TextView
            android:id="@+id/chat_room_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_H1_18sp"
            tools:text="0907" />

        <View
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:background="#4E5969" />

        <TextView
            android:id="@+id/chat_room_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/gray_4"
            android:textSize="@dimen/txt_H5_12sp"
            tools:text="29:22" />
    </LinearLayout>

    <TextView
        android:id="@+id/chat_room_host_prefix"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        tools:text="B"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:gravity="center"
        android:background="@drawable/room_avatar_bg"
        android:layout_marginRight="24dp" />
</RelativeLayout>
